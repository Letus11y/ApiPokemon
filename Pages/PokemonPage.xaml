<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApi.Pages.PokemonPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:PokeApi.ViewModels"
             xmlns:ct="clr-namespace:PokeApi.Controls"
             Title="PokemonPage">   
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadDataPokemonsCommand}"/>
    </ContentPage.Behaviors>

    <ContentPage.BindingContext>
        <vm:PokemonViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Grid>
            <ct:CustomLoaderControl
                Message="FUNCIONANDO"
                MessageSize="30"
                IsVisible="{Binding IsBusy}"/>

            <CollectionView ItemsSource="{Binding Pokemons}"
                            IsVisible="{Binding IsBusy, Converter={StaticResource invertBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10"
                              ColumnDefinitions="Auto,*"
                              RowDefinitions="Auto,Auto">
                           

                            <!-- Nombre del PokÃ©mon -->
                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   VerticalOptions="Start"/>

                            <Label Grid.Column="1"
                                Text="{Binding Url}"/>
                                



                            
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
