<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PokeApi.Pages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pg="clr-namespace:PokeApi.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="PokeApi">

    <ShellContent
        Title="Los Pokemon"
        ContentTemplate="{DataTemplate pg:PokemonPage}"
        Route="PokemonPage" />

    <ShellContent
        Title="Pokemon Locales"
        ContentTemplate="{DataTemplate pg:PokemonLocalPage}"
        Route="PokemonLocalPage"/>


</Shell>
